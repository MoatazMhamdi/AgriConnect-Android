<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Equipments"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bicycles"
        android:usesCleartextTraffic="true">
        <activity android:name=".EquipmentDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EquipmentListActivity" />
        </activity>
        <activity android:name=".MaintenanceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MaintenanceActivity" />
        </activity>
        <activity android:name=".EquipmentListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


</manifest>